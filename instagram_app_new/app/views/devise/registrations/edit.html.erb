<div class="col-md-offset-2 mb-4 edit-profile-wrapper">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
          <div class="form-group">
            <%= f.label :username, "ユーザーネーム" %>
            <%= f.text_field :username, autofocus: true, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
          </div> 
          
          <div class="form-group">
            <%= f.label :website, "ウェブサイト" %>
            <%= f.text_field :wedsite, autofocus: true, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :self_introduction, "自己紹介" %>
            <%= f.text_field :self_introduction, autofocus: true, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :tel, "電話番号" %>
            <%= f.text_field :tel, autofocus: true, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :sex, "性別" %>
            <%= f.select :sex, {'男性': 1, '女性': 2}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
          </div>

        

          <%= f.submit "変更する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>